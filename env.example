# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/dari_wallet
ASYNC_DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/dari_wallet

# Security
SECRET_KEY=your-secret-key-here-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Blockchain RPC Endpoints
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
GANACHE_RPC_URL=http://localhost:7545
BSC_RPC_URL=https://bsc-dataseed1.binance.org
TRON_RPC_URL=https://api.trongrid.io
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
BITCOIN_RPC_URL=http://localhost:8332
XRP_RPC_URL=https://s1.ripple.com:51234

# Third-party API Keys
COINGECKO_API_KEY=your-coingecko-api-key
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key
ETHERSCAN_API_KEY=your-etherscan-api-key
BSCSCAN_API_KEY=your-bscscan-api-key
TRONSCAN_API_KEY=your-tronscan-api-key

# Email Configuration (for notifications and OTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SMS Provider Configuration (for OTP, optional)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-service.com/send

# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/dari_wallet.log

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "https://mybbi.in", "https://dariwallet.com", "https://www.mybbi.in", "https://www.dariwallet.com"]

# Environment
ENVIRONMENT=development
DEBUG=true

# OTP settings are managed by admin in the dashboard/API. No .env config needed. 